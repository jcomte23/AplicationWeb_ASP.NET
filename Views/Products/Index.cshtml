﻿@{
    ViewData["Title"] = "Products";
}

<section>
    <article class="d-flex justify-content-between">
        <form class="d-flex " role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success d-flex" type="submit"><i class="bi bi-search me-2"></i>Search</button>
        </form>
        <div>
            <a class="btn btn-primary text-capitalize" role="button" asp-area="" asp-controller="Product" asp-action="Index">new</a>
        </div>
    </article>
</section>

<section class="table-responsive-sm">
    <table class="table table-striped table-hover align-middle caption-top text-capitalize">
        <caption>Product List</caption>
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">name</th>
                <th scope="col">description</th>
                <th scope="col">price</th>
                <th scope="col">Experation date</th>
                <th scope="col" class="text-center">options</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</section>