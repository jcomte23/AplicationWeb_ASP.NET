
﻿
@{
    ViewData["Title"] = "Products";
}



<section class="card mb-3" style="max-width: 540px;">
    <article class="row g-0 ">
        <figure class="col-md-4 ">
            <img src="https://nayemdevs.com/wp-content/uploads/2020/03/default-product-image.png" class="img-fluid rounded-start" alt="product img">
        </figure>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">Unit price @Model.Price</p>
                <p class="card-text">Amount @Model.Amount</p>
                <p class="card-text"><small class="text-body-secondary">Experation Date <b>@Model.ExpirationDate</b>  </small></p>
            </div>
        </div>
    </article>
</section>