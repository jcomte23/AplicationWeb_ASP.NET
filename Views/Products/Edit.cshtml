@model WebApplicationCRUD_USERS.Models.Product
﻿
@{
    ViewData["Title"] = "Product";
}

@section Scripts {
    <script src="~/js/SettingsCalendarProducts.js" asp-append-version="true"></script>
}

<section class="vh-100">
    <article class="d-flex justify-content-between align-items-center">
        <h1>Update product</h1>
        <a class="btn btn-primary text-capitalize" role="button" asp-area="" asp-controller="Products" asp-action="Index">volver</a>
    </article>
    <form class="row g-3 text-capitalize" asp-action="Create" method="post">
        <div class="col-md-12">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="col-md-12">
            <label asp-for="Description" for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" id="Description" rows="5"></textarea>
        </div>
        <div class="col-md-4">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="number" class="form-control" min="1">
        </div>
        <div class="col-md-4">
            <label asp-for="Amount" class="form-label">Amount</label>
            <input asp-for="Amount" class="form-control" min="1">
        </div>
        <div class="col-md-4">
            <label asp-for="ExpirationDate" class="form-label">Expiration Date</label>
            <input type="date" asp-for="ExpirationDate" class="form-control">
        </div>

        <div class="d-flex justify-content-center gap-2">
            <button type="submit" class="btn btn-success text-capitalize">guardar</button>
            <button type="reset" class="btn btn-danger text-capitalize">cancelar</button>
        </div>
    </form>
</section>