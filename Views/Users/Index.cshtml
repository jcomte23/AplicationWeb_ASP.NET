﻿@{
    ViewData["Title"] = "Users";
}

<section>
    <article class="d-flex justify-content-between">
        <form class="d-flex " role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success d-flex" type="submit"><i class="bi bi-search me-2"></i>Search</button>
        </form>
        <div>
            <a class="btn btn-primary text-capitalize" role="button" asp-area="" asp-controller="Usuario" asp-action="Create">new</a>
        </div>
    </article>
</section>

<section class="table-responsive-sm">
    <table class="table table-striped table-hover align-middle caption-top text-capitalize">
        <caption>User List</caption>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">names</th>
                <th scope="col">last name</th>
                <th scope="col">email</th>
                <th scope="col" class="text-center">options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@user.Id </th>
                    <td>@user.Names</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td class="text-center">
                        <div class="btn-group gap-2">
                            <a class="btn btn-info text-capitalize rounded" role="button" asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">details</a>
                            <a class="btn btn-warning text-capitalize rounded" role="button" asp-area="" asp-controller="Users" asp-action="Edit">edit</a>
                            <a class="btn btn-danger text-capitalize rounded" role="button" asp-area="" asp-controller="Users" asp-action="Delete">delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>